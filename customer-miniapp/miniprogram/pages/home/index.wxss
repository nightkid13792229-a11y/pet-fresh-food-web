.page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.profile-banner {
  margin: 24rpx;
  padding: 24rpx;
  background-color: #fef3c7;
  color: #92400e;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.banner-action {
  padding: 12rpx 24rpx;
  background-color: #10b981;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.home-content {
  padding: 40rpx 24rpx;
}

.welcome-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.action-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}


