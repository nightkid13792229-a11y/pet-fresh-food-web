.page {
  padding: 24rpx;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-item.inline {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-weight: 600;
  color: #111827;
}

input,
textarea {
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 12rpx;
  background-color: #f9fafb;
}

.picker-value {
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 12rpx;
  background-color: #f9fafb;
}

.other-breed-input {
  margin-top: 12rpx;
}

textarea {
  min-height: 140rpx;
}

