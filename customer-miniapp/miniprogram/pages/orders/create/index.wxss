.page {
  padding-bottom: 80rpx;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.label {
  font-weight: 600;
  color: #111827;
}

.picker-value,
input {
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 12rpx;
  background-color: #f9fafb;
}

.error,
.muted {
  color: #6b7280;
  margin: 40rpx auto;
}

.text-center {
  text-align: center;
}


