.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.loading,
.error,
.empty {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
}

.error {
  color: #f56c6c;
}

.address-list {
  padding: 0 20rpx;
}

.address-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.address-content {
  margin-bottom: 24rpx;
}

.address-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.contact-phone {
  font-size: 28rpx;
  color: #6b7280;
}

.default-tag {
  font-size: 22rpx;
  color: #10b981;
  background-color: #d1fae5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: auto;
}

.address-detail {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}

.address-actions {
  display: flex;
  gap: 24rpx;
  padding-top: 24rpx;
  border-top: 1px solid #e5e7eb;
}

.action-btn {
  font-size: 28rpx;
  color: #10b981;
  padding: 8rpx 0;
}

.action-btn.delete {
  color: #f56c6c;
}

.fab-button {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #10b981;
  color: #ffffff;
  font-size: 30rpx;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 16rpx rgba(16, 185, 129, 0.3);
  z-index: 100;
}


