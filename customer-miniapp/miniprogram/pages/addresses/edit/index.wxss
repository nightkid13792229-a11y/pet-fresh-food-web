.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading,
.error {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
}

.error {
  color: #f56c6c;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 8rpx;
  background-color: #fff;
  min-height: 80rpx;
  line-height: 40rpx;
  height: 80rpx;
}

.textarea {
  width: 100%;
  box-sizing: border-box;
  min-height: 120rpx;
  font-size: 30rpx;
  color: #111827;
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 8rpx;
  background-color: #fff;
}

.picker-value {
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
  padding: 20rpx;
  border: 1px solid #d1d5db;
  border-radius: 8rpx;
  background-color: #fff;
  min-height: 80rpx;
  line-height: 1.5;
  display: flex;
  align-items: center;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  background-color: #10b981;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
}

.submit-btn[disabled] {
  background-color: #d1d5db;
  color: #9ca3af;
}

