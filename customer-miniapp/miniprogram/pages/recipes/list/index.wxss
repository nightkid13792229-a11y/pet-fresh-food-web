.page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading,
.error,
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.error {
  color: #f56c6c;
}

.recipes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recipe-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.recipe-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #10b981;
}

.recipe-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.recipe-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}


